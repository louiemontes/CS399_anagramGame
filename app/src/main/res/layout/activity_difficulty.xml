<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.luismontes.anagramgame.DifficultyActivity"
android:background="#a8d118">


<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignWithParentIfMissing="false"
    android:padding="75dp"
    android:background="#55a743"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/gridLayout">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="1dp"
        android:radius="20dp"
        android:textColor="#55a743"
        android:id="@+id/goToEasy"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Easy Game"
        android:backgroundTintMode="src_over" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="1dp"
        android:text="Hard Game"
        android:textColor="#55a743"
        android:color="#55a743"
        android:id="@+id/goToHard"
        android:layout_row="1"
        android:layout_column="0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="1dp"
        android:text="Back To \n Main Menu"
        android:textColor="#55a743"
        android:id="@+id/goBackFromDifficulty"
        android:layout_row="5"
        android:layout_column="0" />

</GridLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Choose \n Game Type"
    android:textSize="35dp"
    android:id="@+id/textView3"
    android:textAlignment="center"
    android:layout_marginTop="10dp"
    android:layout_row="8"
    android:layout_column="0"
    android:layout_alignParentTop="true"
    android:layout_alignRight="@+id/gridLayout"
    android:layout_alignEnd="@+id/gridLayout"
    android:layout_alignLeft="@+id/gridLayout"
    android:layout_alignStart="@+id/gridLayout" />

</RelativeLayout>